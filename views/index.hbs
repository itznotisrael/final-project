<!-- BACKGROUND LAYERS -->
<div class="vault-background"></div>
<div class="nebula"></div>

<!-- MAIN APP CONTENT -->
<main class="vault-ui">

  <!-- INTRO / TITLE -->
  <header class="vault-header">
    <h1 class = "tracking-in-contract-bck-top">The Anime Memory Vault</h1>
    <p class = "tracking-in-contract-bck-bottom">Leave behind a moment that stayed with you.</p>
  </header>

  <!-- SUBMISSION FORM -->
  <div class="memory-form capsule slide-in-blurred-left">

    <!-- Ambient capsule glow orb -->
    <div class="capsule-orb"></div>

    <!-- Sakura memory weight (form-specific) -->
    <div class="sakura sakura-form"></div>

    <!-- FORM FIELDS -->
    <label>
      <span>Your Name</span>
      <input
        id="emotion"
        type="text"
        placeholder="Who experienced this moment?"
      />
    </label>

    <label>
      <span>Anime</span>
      <select id="animeTitle">
        <option value="">Choose Anime</option>
        <option value="Dragon Ball">Dragon Ball</option>
        <option value="One Piece">One Piece</option>
        <option value="Bleach">Bleach</option>
        <option value="Naruto">Naruto</option>
        <option value="Jujutsu Kaisen">Jujutsu Kaisen</option>
        <option value="My Hero Academia">My Hero Academia</option>
        <option value="Black Clover">Black Clover</option>
        <option value="Hunter X Hunter">Hunter X Hunter</option>
      </select>
    </label>

    <label>
      <span>Memory</span>
      <textarea
        id="memoryText"
        placeholder="Describe the moment that stayed with you…"
      ></textarea>
    </label>

      <!-- TOOLBAR -->
    <div class = "text-focus-in">
        <div class="toolbar">
            <button id="sort">Sort A–Z</button>
            <button id="add-item-button" type="button">Add Memory</button>
        </div>
    </div>
  </div>

  <!-- ATMOSPHERIC FX LAYERS (JS GENERATED) -->
  <div class="particle"></div>
  <div class="orb"></div>
  <div class="ripple"></div>
  <div class="sakura"></div>

  <!-- MEMORY LIST -->
  <ul id="list" class="memory-list"></ul>

</main>
